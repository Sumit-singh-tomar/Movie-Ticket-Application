<style>
    hr.solid {
    border-top: 3px solid black;
  }
      .maincontainer{
          width:100vw;
          height:100vh;
          display: flex;
          justify-content: center;
          align-items: center;
          background-image: url('/images/offerbg.jpg');
      }
  
      .box{
          width:65vw;
          height:auto;
          background:white;
          border-radius:20px;
          padding: 10px;
      }
      .innerbox
      {
          height:90%;
          width: 22vw;
          margin-top: 10px;
      }
  
  </style>
  <html>
      <head>
          <title>Book Ticket</title>
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
          <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>   
          <script src="/javascripts/ticketprize.js"></script>
      </head>
      <body >
          <div class="maincontainer" >
          <div class="box">
                <% if(msg==0) { %>
                  <div class="container">
                        <div class="row" style="background-color: powderblue;"> 
                            <div class="col-sm-6" style="font-size:27; font-family:Consolas; color:white"><img src="/images/movielogo.jpg" style="width:10%;"> BOOK TICKET</div>
                        </div>
                    
                      <form action="/movie/book_ticket_submission">
                      <div class="row" style="margin-top: 10px;">
                          <div class="col-sm-5" style="display:flex;justify-content: center; align-items:center;">
                              <div class="innerbox shadow p-3 mb-5 bg-body rounded" >            
                                  <h3 style=" margin-top: 20px;">BOOK TICKET</h3>
                                  <input type="text" id="moviename" name="moviename" class="form-control" style="font-family: Consolas;margin-top: 20px;" disabled value="<%=data.moviename%>">
                                  <input type="text" id="email" name="email" class="form-control" style="font-family: Consolas;margin-top: 10px;" required placeholder="Enter Email Id">
                                  <select class="form-select" required style="margin-top: 10px;">
                                    <option>-Show Time-</option>
                                    <option>9:00-12:00</option>
                                    <option>12:00-3:00</option>
                                    <option>3:00-6:00</option>
                                  </select>
                                  <input type="date" class="form-control" name="date" required style="font-family: Consolas;margin-top:10px;">
                                  <input type="text" name="ticket" id="ticket" required placeholder="Number of Tickets" class="form-control" style="margin-top: 10px;">
                                  Prize : <input type="text" id="total" name="total" class="form-control" style="margin-top: 3px;">
                                  <button class="btn btn-danger" style="margin-top:20px;width: 99%;">Book Ticket</button>
                           
                              </div>
                          </div>
                          <div class="col-sm-7">
                             <img src="/images/offer.jpg" style="width:100%;">
                          

                          </div>
                      </div>
                    </form>
                </div>
                    <% } %>

                    <% if(msg==1) { %>
                        <div class="container">
                            <div class="row" style="background-color: powderblue;"> 
                                <div class="col-sm-6" style="font-size:27; font-family:Consolas; color:white"><img src="/images/movielogo.jpg" style="width:10%;"> BOOK TICKET</div>
                                <div class="col-sm-6" style="font-size:22;display: flex;justify-content:right;font-family: Consolas;font-weight: 800;margin-top:10px;"><a href="/admin/loginpage" style="text-decoration: none;color: white;margin-left:75%;"><img src="/images/home.png" width="30%" style="margin-right: 3px;margin-bottom:3px;">Home</a></div>
                            </div>
                            

                            <div class="row">
                                <div class="col-sm-12" style="display: flex;justify-content: center;align-items: center;margin-top: 50px;margin-bottom: 10px;font-family: Consolas;font-size:24;font-weight: 800;"><img src="/images/successful.png"></div>
                                <div class="col-sm-12" style="display: flex;justify-content: center;align-items: center;font-family: Consolas;font-size:24;font-weight: 800;">Movie Ticket Book Successfully</div>
                                <div class="col-sm-12" style="display: flex;justify-content: center;align-items: center;margin-top:10px;margin-bottom: 50px;font-family: Consolas;font-size:24;font-weight: 800;"><a href="/movie/book_ticket_view?ticket=<%=item.ticket%>" style="text-decoration: none;">View ticket</a></div>
                            </div>
                        </div>
                    <% } %>
         

              </div>
          </div>
      </body>
  </html>