<style>
    .maincontainer{
        height: 100vh;
        width: 100vw;
        background: gainsboro;
        display: flex;
        align-items: center;
    }
    .box{
        height:70%;
        width:30%;
        background:white;
        display:flex;
        align-items: center;
    }
    .secondbox{
        height:70%;
        width:70%;
        background: white;
        display:flex;
    }
</style>
<html>
    <head>
        <title>Movie Interface Page</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>      
    </head>
    <body>
        <div class="maincontainer">
            <div class="box">
                <div style="width:100%;height:90%;display: flex;justify-content: center;align-items: center;"><img src="/images/<%=data.poster%>" style="width:60%; height:90%;"></div>
            </div>
            <div class="secondbox" style="display: flex;flex-direction: column;">
                <div style="margin-top:50px;font-family:Consolas;font-size:40;font-weight:800;"><%=data.moviename%></div>
                <div style="font-family:Consolas;font-size:18;font-weight:400;"><%=data.movietype%></div>
                <div style="font-family:Consolas;font-size:18;font-weight:400;"><%=data.format%></div>
                <div style="font-family:Consolas;font-size:18;font-weight:400;">Release on <%=data.date%></div>
                <div style="font-family:Consolas;font-size:18;font-weight:400;"><%=data.statename%></div>
                <div style="font-family:Consolas;font-size:18;font-weight:400;"><%=data.cityname%></div>
                <div style="font-family:Consolas;font-size:18;font-weight:400;"><%=data.cinemaname%></div>
                <a href="/movie/book_ticket"><input type="button" class="btn btn-danger" style="width:20%;margin-top:20px;" value="Book Ticket"></a>
            </div>
        </div>
    </body>
</html>