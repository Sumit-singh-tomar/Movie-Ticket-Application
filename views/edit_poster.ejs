<style>
    .maincontainer{
        height: 100vh;
        width: 100vw;
        background: gainsboro;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .box{
        height: auto;
        width:50%;
        background: white;
        border-radius: 20px;
    }
    .fontStyle{
        font-family: Consolas;
    }
</style>
<html>
    <head>
        <title>Edit Poster Page</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>   
        <script src="/javascripts/state.js"></script>    
    </head>
    <body>
        <div class="maincontainer">
            <div class="box">
                <div class="container">
                    <form action="/movie/edit_poster_submit" method="post" enctype="multipart/form-data">
                    <div class="row" style="margin-top: 20px;">
                        <div class="col-sm-12"><h3 class="fontStyle">Movie Name : <%=data.moviename%></h3><hr></div>
                    </div>

                    
                    <div class="row">
                        <div class="col-sm-12"><h5>Current Poster : </h5><img src="/images/<%=data.poster%>" width="30%"></div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12"><hr></div>
                    </div>

                    
                    <div class="row">
                        <div><input type="hidden" name="oldposter" value="<%=data.poster%>"></div>
                        <div><input type="hidden" name="movieid" value="<%=data.mid%>"></div>
                        <div class="col-sm-12" style="font-family: Consolas;"><label for="newposter" class="form-label">Set New Poster : </label><input id="newposter" class="form-control" type="file" name="newposter"></div>
                    </div>

                    <div class="row" style="margin-top: 20px; margin-bottom: 20px;">
                        <div class="col-sm-12" style="font-family: Consolas;display: flex;justify-content: center;"><button class="btn btn-danger" style="width:30%;">Edit Picture</button></div>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </body>
</html>