<style>
    hr.solid {
    border-top: 3px solid black;
  }
      .maincontainer{
          width:100vw;
          height:100vh;
          display: flex;
          justify-content: center;
          align-items: center;
          background-image: url('/images/loginbg.jpg');
      }
  
      .box{
          width:65vw;
          height:auto;
          background:white;
          border-radius:20px;
         padding: 10px;
      }
      .innerbox
      {
          height:90%;
          width: 22vw;
          margin-top: 10px;
      }
  
  </style>
  <html>
      <head>
          <title>Login</title>
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
     
      </head>
      <body >
          <div class="maincontainer" >
          <div class="box">
                  <div class="container">
                      <form action="/admin/check_login" method="post">
                      
                        <div class="row" style="background-color: powderblue;"> 
                            <div class="col-sm-6" style="font-size:27; font-family:Consolas; color:white"><img src="/images/movielogo.jpg" style="width:10%;"> MOVIE RECORD</div>
                        </div>
    
                      <div class="row" style="margin-top: 10px;">
                          <div class="col-sm-5" style="display:flex;justify-content: center; align-items:center;">
                              <div class="innerbox shadow p-3 mb-5 bg-body rounded" >            
                                  <h1 style=" margin-top: 20px;">Login</h1>
                                  <label for="email" class="form-label" style="margin-top: 20px;font-family: Consolas;">Email Address :</label>
                                  <input type="text" id="email" name="email" class="form-control" style="font-family: Consolas;" placeholder="you@example.com">
  
                                  <label for="email" class="form-label" style="margin-top: 10px;font-family: Consolas;">Password :</label>
                                  <input type="password" id="pwd" name="pwd" class="form-control" style="font-family: Consolas;" placeholder="Type Your password">
  
                                  <div style="display: flex; justify-content: center;align-items: center;"><input style="margin-top: 20px;font-family: Consolas;
                                  width: 100%;" type="submit" id="login" name="login" class="btn btn-danger" value="Login"></div>      
                              
                                  <div style="color:red;font-size:18;display:flex;justify-content:center;margin-top:15px;font-family: Consolas;"><%=msg%></div>                      
                                  <hr class="solid" style="margin-top: 10px;">
                                  
                                  <div style="font-family: Consolas;font-size: 18;"><a href="/product/google" target="_blank" style="text-decoration: none;
                                  color:black;display: flex;justify-content: center;"><img src="/images/googlelogo.png" style="margin-right: 5px;"
                                   width="10%">SIGN IN WITH GMAIL</a></div>

                                   <div style="font-family: Consolas;margin-top: 5px;font-size:15;display: flex;justify-content: center;">Don't have a account?</div>
                                   <a href="/admin/user_register" style="text-decoration: none;font-size: 14;display: flex;justify-content: center;">Register Now</a>
                              </div>
                          </div>
                      
                          <div class="col-sm-7" >
                             <img src="/images/Inkedoriginal_LI.jpg" style="margin-top: 20px; width: 100%;" >
                          </div>
                      </div>
                  </form>
                  </div>
              </div>
          </div>
      </body>
  </html>