<style>
    .maincontainer{
        height: 100vh;
        width: 100vw;
        background: gainsboro;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .box{
        height: auto;
        width:50%;
        background: white;
    }
    .fontwriting{
        font-size:18; 
        font-family:Consolas;
    }
</style>

<html>
    <head>
        <title>Movie Ticket</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>   
    </head>

    <body>
     
        <div class="maincontainer" style="font-family: Consolas;">
            <div class="box">
                <div class="container">

                    <div class="row" style="background-color:bisque;">
                        <div class="col-sm-8">
                            <div style="font-size:30;font-weight:600;margin-top:10px;"><img src="/images/moviecompany.png" width="8%"> TICKET DETAILS</div>
                        </div>
                        <div class="col-sm-4" style="font-size:22;display: flex;justify-content:right;align-items:center;font-family: Consolas;font-weight: 500;margin-top:10px;"><a href="/admin/loginpage" style="text-decoration: none;margin-left:50%;color: black;"><img src="/images/home.png" width="25%" style="margin-right: 3px;margin-bottom: 3px;">Home</a></div>

                    </div>

                    <div class="row">
                        <div class="col-sm-12" style="background-color: aqua;margin-top: 10px;">
                            <div style="display: flex;"><div style="font-size:40;font-weight: 500;margin-top:10px;color:white"><%=data.moviename%></div><div style="margin-left: auto;margin-top:20px;font-size:20;font-weight:700;display: flex;justify-content: center;align-items: center;" class="btn btn-outline-dark">Adult : <%=item.ticket%></div>  </div>
                            <div style="font-size:20;font-weight: 400;margin-top:10px;"><%=data.date%></div>
                            <div style="font-size:20;font-weight: 400;margin-top:10px;color:white"><%=data.cinemaname%></div>
                        </div>
                    </div>   

                    
                    <div class="row">
                        <div class="col-sm-12" style="margin-top: 10px;display: flex;justify-content: center;margin-top: 50px;">
                            <img src="/images/qr.png" width="20%"></div>
                        </div>
                    </div>  
                    <div class="row" style="margin-top:20px;margin-bottom: 5px;">
                    </div>  

                </div>
            </div>
        </div>
    </body>
</html>