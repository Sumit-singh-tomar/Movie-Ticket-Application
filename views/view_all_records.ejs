<style>
    .maincontainer{
        height:100%;width:100%;background-color:gainsboro;
    }
    .tempcontainer
    {
        height:auto;width:100%;background-color:gainsboro;
    }
    .innerbox{
        width:90%;background-color:silver;height:80%;
    }
</style>
<html>
    <head>
        <title>Viw record Page</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>   
        <script src="/javascripts/state.js"></script>    
    </head>

    <body>
        <%if(data.length<=6) { %>
        <div class="maincontainer">
        <% }%>
        <%if(data.length>6) { %>
            <div class="tempcontainer">
        <% }%>  
         
            <div class="row">
                <div class="col-sm-5" style="font-family:Consolas;font-size:28;font-weight: 700;margin-left:4%;margin-top: 30px;">Movie List</div>
            </div>          
            
           
                <div class="row" style="padding:40px;">
                <% data.map((item)=> { %>
                    <div class="col-sm-2" style="display: flex;justify-content: center;">
                        <div class="innerbox shadow p-3 mb-5 bg-body rounded" style="margin-top:15px;display: flex;justify-content: center;flex-direction: column;">
                        <a href="/movie/view_poster_detail?movieid=<%=item.movieid%>" style="height:100%;"><img src="/images/<%=item.poster%>" style="width:100%;height:100%;border-radius:10px;"></a>
                        <div style="display:flex;justify-content:center;font-weight:700;font-family:Consolas;font-size:20;"><a href="/movie/view_poster_detail?movieid=<%=item.movieid%>" style="height:100%;text-decoration: none;color: black;margin-top:3px;"><%=item.moviename%></a></div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </body>
</html>